/* l'obbiettivo era creare uno strumento di disegno che creasse una scia di trangoli
aventi per base le coordinate del mouse. Nel prossimo esercizio vorrei che i vertici
che attualmente creo con un ramdom fossero congiunti da una linea che va a chiudere
la forma creando una sorta di soffietto. Infine vorrei il segno fosse simmetrico.

float x = 0, y = 0;
float stepSize = 5.0;

void setup() {
  size (600, 600);
  background (0, 0, 0);
  colorMode (HSB, 360, 100, 100, 100);
  x = mouseX;
  y = mouseY;
}

void draw () {
  if (mousePressed) {
    float d = dist(x, y, mouseX, mouseY); // definisce la dimensione scalare

    if (d > stepSize) {
      float angle = atan2(mouseY-y, mouseX-x); 

      pushMatrix();
      noStroke ();
      fill (200, 50, 100, 70);
      beginShape ();
      vertex (mouseX, mouseY);
      vertex (pmouseX, pmouseY);
      vertex (mouseX+random(50), mouseY-random(50));
      endShape (CLOSE);

      beginShape ();
      vertex (mouseX, mouseY);
      vertex (pmouseX, pmouseY);
      vertex (mouseX-random(50), mouseY+random(50));
      endShape (CLOSE);
      popMatrix();


      x = x + cos(angle) * stepSize;
      y = y + sin(angle) * stepSize;
    }
  }
}

void mousePressed() {
  x = mouseX;
  y = mouseY;
}
