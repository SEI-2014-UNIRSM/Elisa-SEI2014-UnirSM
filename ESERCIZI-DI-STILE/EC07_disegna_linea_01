/*
 * DRAWING A TAIL OF TRIANGLES
 *
 * MOUSE
 * drag                : drawing
 * release             : nothing
 *
 */


void setup() {
  size (600, 600);
}

void draw () {
  if (mousePressed) {
    line (mouseX, mouseY, pmouseX, pmouseY);
  } 
}
